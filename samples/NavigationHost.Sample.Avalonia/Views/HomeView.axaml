<UserControl
    x:Class="NavigationHost.Sample.Avalonia.Views.HomeView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:NavigationHost.Sample.Avalonia.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:HomeViewModel"
    mc:Ignorable="d">

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Offset="0" Color="#EFF6FF" />
                <GradientStop Offset="0.5" Color="#DBEAFE" />
                <GradientStop Offset="1" Color="#BFDBFE" />
            </LinearGradientBrush>
        </Border.Background>
        <ScrollViewer>
            <StackPanel Margin="45" Spacing="28">
                <TextBlock
                    FontSize="42"
                    FontWeight="Bold"
                    Foreground="#0369A1"
                    Text="{Binding Title}" />

                <TextBlock
                    FontSize="18"
                    Foreground="#334155"
                    LineHeight="30"
                    Text="{Binding Description}"
                    TextWrapping="Wrap" />

                <Border
                    Margin="0,10,0,0"
                    Padding="32"
                    Background="White"
                    BorderBrush="#0EA5E9"
                    BorderThickness="0,0,0,4"
                    BoxShadow="0 8 16 -2 #15000000, 0 4 8 -2 #0A000000"
                    CornerRadius="16">
                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="#0369A1"
                            Text="âœ¨ Features Demonstrated:" />

                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="16"
                            Foreground="#1E293B"
                            LineHeight="30"
                            Text="{Binding Features}" />
                    </StackPanel>
                </Border>

                <Border
                    Margin="0,8,0,0"
                    Padding="24"
                    CornerRadius="16">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                            <GradientStop Offset="0" Color="#FEF3C7" />
                            <GradientStop Offset="0.5" Color="#FDE68A" />
                            <GradientStop Offset="1" Color="#FCD34D" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel Spacing="10">
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#92400E"
                            Text="ðŸ’¡ Try This:" />
                        <TextBlock
                            FontSize="15"
                            Foreground="#78350F"
                            LineHeight="24"
                            Text="Navigate to different views using the buttons in the header. Experience smooth transitions and parameter passing!"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
