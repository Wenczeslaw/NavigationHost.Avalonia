<UserControl
    x:Class="NavigationHost.Sample.WPF.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NavigationHost.Sample.WPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#EFF6FF" />
                <GradientStop Offset="0.5" Color="#DBEAFE" />
                <GradientStop Offset="1" Color="#BFDBFE" />
            </LinearGradientBrush>
        </Border.Background>
        <ScrollViewer>
            <StackPanel Margin="45">
                <TextBlock
                    Margin="0,0,0,28"
                    FontSize="42"
                    FontWeight="Bold"
                    Foreground="#0369A1"
                    Text="{Binding Title}" />

                <TextBlock
                    Margin="0,0,0,28"
                    FontSize="18"
                    Foreground="#334155"
                    Text="{Binding Description}"
                    TextWrapping="Wrap" />

                <Border
                    Margin="0,10,0,28"
                    Padding="32"
                    Background="White"
                    BorderBrush="#0EA5E9"
                    BorderThickness="0,0,0,4"
                    CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="16"
                            Direction="270"
                            Opacity="0.5"
                            ShadowDepth="4"
                            Color="#15000000" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="#0369A1"
                            Text="âœ¨ Features Demonstrated:" />

                        <TextBlock
                            FontFamily="Segoe UI"
                            FontSize="16"
                            Foreground="#1E293B"
                            Text="{Binding Features}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <Border
                    Margin="0,8,0,0"
                    Padding="24"
                    CornerRadius="16">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="#FEF3C7" />
                            <GradientStop Offset="0.5" Color="#FDE68A" />
                            <GradientStop Offset="1" Color="#FCD34D" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#92400E"
                            Text="ðŸ’¡ Try This:" />
                        <TextBlock
                            FontSize="15"
                            Foreground="#78350F"
                            Text="Navigate to different views using the buttons in the header. Experience smooth transitions and parameter passing!"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
