<UserControl
    x:Class="NavigationHost.Sample.WPF.Views.UserProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NavigationHost.Sample.WPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:UserProfileViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#EEF2FF" />
                <GradientStop Offset="0.5" Color="#E0E7FF" />
                <GradientStop Offset="1" Color="#C7D2FE" />
            </LinearGradientBrush>
        </Border.Background>
        <ScrollViewer>
            <StackPanel Margin="28">
                <TextBlock
                    Margin="0,0,0,20"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="#4F46E5"
                    Text="{Binding Title}"
                    TextWrapping="Wrap" />

                <Border
                    Margin="0,0,0,20"
                    Padding="16"
                    Background="#C7D2FE"
                    CornerRadius="12">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#3730A3"
                            Text="💡 Secondary Host Demo" />
                        <TextBlock
                            FontSize="13"
                            Foreground="#4338CA"
                            Text="This view is displayed in the secondary NavigationHost (SideHost)."
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>

                <Border
                    Margin="0,0,0,20"
                    Padding="26"
                    Background="White"
                    BorderBrush="#818CF8"
                    BorderThickness="0,0,0,4"
                    CornerRadius="14">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="16"
                            Direction="270"
                            Opacity="0.5"
                            ShadowDepth="4"
                            Color="#15000000" />
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#94A3B8"
                                Text="User ID:" />
                            <TextBlock
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="#4F46E5"
                                Text="{Binding UserId}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#94A3B8"
                                Text="Name:" />
                            <TextBlock
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="#4F46E5"
                                Text="{Binding UserName}" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#94A3B8"
                                Text="Member Since:" />
                            <TextBlock
                                FontSize="16"
                                Foreground="#64748B"
                                Text="{Binding MemberSince}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border
                    Margin="0,0,0,20"
                    Padding="16"
                    Background="#CCFBF1"
                    BorderBrush="#5EEAD4"
                    BorderThickness="2"
                    CornerRadius="12">
                    <TextBlock
                        FontSize="13"
                        FontStyle="Italic"
                        Foreground="#115E59"
                        Text="{Binding NavigationInfo}"
                        TextWrapping="Wrap" />
                </Border>

                <Border
                    Padding="18"
                    Background="White"
                    BorderBrush="#A5B4FC"
                    BorderThickness="2"
                    CornerRadius="12">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="8"
                            Direction="270"
                            Opacity="0.5"
                            ShadowDepth="4"
                            Color="#15000000" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#4F46E5"
                            Text="✨ Features:" />
                        <TextBlock
                            FontSize="14"
                            Foreground="#334155"
                            Text="✓ Multiple NavigationHosts" />
                        <TextBlock
                            FontSize="14"
                            Foreground="#334155"
                            Text="✓ Parameter passing" />
                        <TextBlock
                            FontSize="14"
                            Foreground="#334155"
                            Text="✓ Independent navigation" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
