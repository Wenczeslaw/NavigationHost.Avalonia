<UserControl
    x:Class="NavigationHost.Sample.WPF.Views.ProductDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NavigationHost.Sample.WPF.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:ProductDetailViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#FDF4FF" />
                <GradientStop Offset="0.5" Color="#FAE8FF" />
                <GradientStop Offset="1" Color="#F5D0FE" />
            </LinearGradientBrush>
        </Border.Background>
        <ScrollViewer>
            <StackPanel Margin="45">
                <TextBlock
                    Margin="0,0,0,28"
                    FontSize="42"
                    FontWeight="Bold"
                    Foreground="#C026D3"
                    Text="{Binding Title}" />

                <Border
                    Margin="0,0,0,28"
                    Padding="20"
                    Background="#CCFBF1"
                    BorderBrush="#5EEAD4"
                    BorderThickness="2"
                    CornerRadius="12">
                    <TextBlock
                        FontSize="15"
                        FontStyle="Italic"
                        Foreground="#115E59"
                        Text="{Binding NavigationInfo}"
                        TextWrapping="Wrap" />
                </Border>

                <Border
                    Margin="0,0,0,28"
                    Padding="38"
                    Background="White"
                    BorderBrush="#E879F9"
                    BorderThickness="0,0,0,4"
                    CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="16"
                            Direction="270"
                            Opacity="0.5"
                            ShadowDepth="4"
                            Color="#15000000" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,20"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#94A3B8"
                            Text="Product ID:" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,20"
                            FontSize="17"
                            Foreground="#334155"
                            Text="{Binding ProductId}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,20"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#94A3B8"
                            Text="Name:" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,20"
                            FontSize="26"
                            FontWeight="Bold"
                            Foreground="#C026D3"
                            Text="{Binding ProductName}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,0,20"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#94A3B8"
                            Text="Category:" />
                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,0,0,20"
                            Padding="12,6"
                            HorizontalAlignment="Left"
                            Background="#F0ABFC"
                            CornerRadius="6">
                            <TextBlock
                                FontSize="15"
                                FontWeight="SemiBold"
                                Foreground="#86198F"
                                Text="{Binding ProductCategory}" />
                        </Border>

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,0,20"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="#94A3B8"
                            Text="Price:" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,0,0,20"
                            FontSize="28"
                            FontWeight="Bold"
                            Foreground="#C026D3"
                            Text="{Binding ProductPrice, StringFormat=C}" />
                    </Grid>
                </Border>

                <Border
                    Padding="26"
                    Background="White"
                    BorderBrush="#F0ABFC"
                    BorderThickness="2"
                    CornerRadius="16">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="8"
                            Direction="270"
                            Opacity="0.5"
                            ShadowDepth="4"
                            Color="#15000000" />
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,12"
                            FontSize="19"
                            FontWeight="Bold"
                            Foreground="#C026D3"
                            Text="✨ Features Demonstrated:" />
                        <TextBlock
                            Margin="0,0,0,0"
                            FontSize="15"
                            Foreground="#334155"
                            Text="✓ Receiving strongly-typed navigation parameters" />
                        <TextBlock
                            Margin="0,0,0,0"
                            FontSize="15"
                            Foreground="#334155"
                            Text="✓ CanNavigateTo parameter validation" />
                        <TextBlock
                            Margin="0,0,0,0"
                            FontSize="15"
                            Foreground="#334155"
                            Text="✓ OnNavigatedTo parameter processing" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
