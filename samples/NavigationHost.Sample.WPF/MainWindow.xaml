<Window
    x:Class="NavigationHost.Sample.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NavigationHost.Sample.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nav="clr-namespace:NavigationHost.WPF;assembly=NavigationHost.Wpf"
    xmlns:vm="clr-namespace:NavigationHost.Sample.WPF.ViewModels"
    Title="NavigationHost.WPF - Comprehensive Demo"
    Width="1200"
    Height="700"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header with Navigation Buttons  -->
        <Border Grid.Row="0">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="16"
                    Direction="270"
                    Opacity="0.5"
                    ShadowDepth="4"
                    Color="#40000000" />
            </Border.Effect>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="#6366F1" />
                    <GradientStop Offset="0.5" Color="#8B5CF6" />
                    <GradientStop Offset="1" Color="#A855F7" />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Margin="24,18">
                <TextBlock
                    Margin="0,0,0,18"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="âœ¨ NavigationHost.WPF Demo" />

                <StackPanel Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,0"
                        Padding="20,12"
                        Command="{Binding NavigateHomeCommand}"
                        Content="ðŸ  Home"
                        Style="{StaticResource HeaderButtonStyle}"
                        ToolTip="Navigate to Home View" />

                    <Button
                        Margin="0,0,10,0"
                        Padding="20,12"
                        Command="{Binding NavigateProductListCommand}"
                        Content="ðŸ“¦ Products"
                        Style="{StaticResource HeaderButtonStyle}"
                        ToolTip="Navigate to Product List with parameters" />

                    <Button
                        Margin="0,0,10,0"
                        Padding="20,12"
                        Command="{Binding NavigateSettingsCommand}"
                        Content="âš™ï¸ Settings"
                        Style="{StaticResource HeaderButtonStyle}"
                        ToolTip="Navigate to Settings (demonstrates CanNavigateFrom)" />

                    <Button
                        Margin="0,0,10,0"
                        Padding="20,12"
                        Command="{Binding NavigateUserProfileCommand}"
                        Content="ðŸ‘¤ Profile"
                        Style="{StaticResource HeaderButtonStyle}"
                        ToolTip="Navigate in secondary host with parameter" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!--  Main Content Area  -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Main Navigation Host  -->
            <Border
                Grid.Column="0"
                Margin="0,0,10,0"
                Background="White"
                BorderBrush="#E0E7FF"
                BorderThickness="2"
                CornerRadius="16">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="16"
                        Direction="270"
                        Opacity="0.5"
                        ShadowDepth="4"
                        Color="#15000000" />
                </Border.Effect>
                <DockPanel>
                    <Border
                        Padding="20,14"
                        CornerRadius="16,16,0,0"
                        DockPanel.Dock="Top">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Offset="0" Color="#EEF2FF" />
                                <GradientStop Offset="1" Color="#E0E7FF" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#4F46E5"
                            Text="ðŸŽ¯ Main Navigation Host" />
                    </Border>

                    <!--  Primary NavigationHost  -->
                    <nav:NavigationHost nav:HostManager.HostName="MainHost">
                        <nav:NavigationHost.DefaultContent>
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#FAFAFA" />
                                        <GradientStop Offset="1" Color="#F5F5F5" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock
                                        Margin="0,0,0,20"
                                        FontSize="48"
                                        FontWeight="Bold"
                                        Foreground="#8B5CF6"
                                        Text="ðŸ‘‹"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        Margin="0,0,0,20"
                                        FontSize="28"
                                        FontWeight="Bold"
                                        Foreground="#6366F1"
                                        Text="Welcome!"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        Margin="0,0,0,20"
                                        FontSize="16"
                                        Foreground="#64748B"
                                        Text="Click any button above to navigate"
                                        TextAlignment="Center" />
                                    <Border
                                        Padding="16,10"
                                        Background="#EEF2FF"
                                        CornerRadius="8">
                                        <TextBlock
                                            FontSize="13"
                                            FontStyle="Italic"
                                            Foreground="#6366F1"
                                            Text="âœ¨ This demonstrates DefaultContent property"
                                            TextAlignment="Center" />
                                    </Border>
                                </StackPanel>
                            </Border>
                        </nav:NavigationHost.DefaultContent>
                    </nav:NavigationHost>
                </DockPanel>
            </Border>

            <!--  Side Navigation Host  -->
            <Border
                Grid.Column="1"
                Margin="10,0,0,0"
                Background="White"
                BorderBrush="#DBEAFE"
                BorderThickness="2"
                CornerRadius="16">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="16"
                        Direction="270"
                        Opacity="0.5"
                        ShadowDepth="4"
                        Color="#15000000" />
                </Border.Effect>
                <DockPanel>
                    <Border
                        Padding="20,14"
                        CornerRadius="16,16,0,0"
                        DockPanel.Dock="Top">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Offset="0" Color="#EFF6FF" />
                                <GradientStop Offset="1" Color="#DBEAFE" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#0284C7"
                            Text="ðŸ“‹ Secondary Host" />
                    </Border>

                    <!--  Secondary NavigationHost  -->
                    <nav:NavigationHost nav:HostManager.HostName="SideHost">
                        <nav:NavigationHost.DefaultContent>
                            <Border>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#FAFAFA" />
                                        <GradientStop Offset="1" Color="#F5F5F5" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock
                                        Margin="0,0,0,14"
                                        FontSize="32"
                                        FontWeight="Bold"
                                        Foreground="#06B6D4"
                                        Text="ðŸ“‹"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        Margin="0,0,0,14"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="#0284C7"
                                        Text="Side Panel"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        Margin="20,0"
                                        FontSize="13"
                                        Foreground="#64748B"
                                        Text="Multiple NavigationHosts demo"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </nav:NavigationHost.DefaultContent>
                    </nav:NavigationHost>
                </DockPanel>
            </Border>
        </Grid>

        <!--  Status Bar  -->
        <Border
            Grid.Row="2"
            Background="White"
            BorderBrush="#E0E7FF"
            BorderThickness="0,2,0,0">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="12"
                    Direction="90"
                    Opacity="0.5"
                    ShadowDepth="4"
                    Color="#15000000" />
            </Border.Effect>
            <Border Padding="16,12">
                <Border Padding="14,10" CornerRadius="8">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Offset="0" Color="#EEF2FF" />
                            <GradientStop Offset="1" Color="#E0E7FF" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#4F46E5"
                        Text="{Binding StatusMessage}" />
                </Border>
            </Border>
        </Border>
    </Grid>
</Window>



